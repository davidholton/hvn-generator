<HVNLayout>:
    canvas.before:
        Rectangle:
            size: self.size
            source: "images/dice.jpg"

	FloatLayout:
		size: root.width, root.height
		pos: 0, 0

		Button:
			text: "Option"
			on_press: root.manager.current = 'option'
			on_press: root.optBtn() 
			pos_hint: {"top": 0.97, "right": 0.97}
			size_hint: (None, None)
			size: 200, 100

		Button:
			text: "Generate"
			on_press: root.manager.current = 'generate'
			on_press: root.genBtn() 
			pos_hint: {"x": 0.06, "y": 0.06}
			size_hint: (None, None)
			size: 200, 100

<HVNOption>:
    canvas.before:
        Rectangle:
            size: self.size
            source: "images/dice.jpg"

	profession: profession

	FloatLayout:
		size: root.width, root.height
		pos: 0, 0

		Button:
			text: "Close"
			on_press: root.manager.current = 'layout'
			on_press: root.optBtn() 
			pos_hint: {"x": 0.06, "y": 0.8}
			size_hint: (None, None)
			size: 200, 100

#		Button:
#			text: 'Power Score'
#			pos_hint: {"x": 0.4, "y": 0.8}
#			size_hint: (None, None)
#			size: 200, 50
#			on_press: root.abScore()

		Button:
			text: 'Race'
			pos_hint: {"x": 0.4, "y": 0.7}
			size_hint: (None, None)
			size: 200, 50

		Button:
			text: 'Gender'
			pos_hint: {"x": 0.4, "y": 0.6}
			size_hint: (None, None)
			size: 200, 50

		Button:
			text: 'Class'
			pos_hint: {"x": 0.4, "y": 0.5}
			size_hint: (None, None)
			size: 200, 50

		TextInput:
			id: profession
			hint_text: 'Type your profession'
			multiline: False
			size_hint: None, None
			pos_hint: {"x": 0.4, "y": 0.4}
			size: 200, 50
		Button:
			text: 'Submit profession'
			pos_hint: {"x": 0.4, "y": 0.3}
			size_hint: (None, None)
			size: 200, 50

		Button:
			text: "Generate"
			on_press: root.manager.current = 'generate'
			on_press: root.genBtn() 
			pos_hint: {"x": 0.06, "y": 0.06}
			size_hint: (None, None)
			size: 200, 100


