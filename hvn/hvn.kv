<HVNLayout>:
    canvas.before:
        Rectangle:
            size: self.size
            source: "images/dice.jpg"

	FloatLayout:
		size: root.width, root.height
		pos: 0, 0

		Button:
			text: "Option"
			on_press: root.manager.current = 'option'
			on_press: root.optBtn() 
			pos_hint: {"top": 0.97, "right": 0.97}
			size_hint: (None, None)
			size: 200, 100

		Button:
			text: "Generate"
			on_press: root.manager.current = 'generate'
			on_press: root.genBtn() 
			pos_hint: {"x": 0.06, "y": 0.06}
			size_hint: (None, None)
			size: 200, 100

