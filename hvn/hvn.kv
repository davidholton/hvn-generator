<HVNLayout>:
    canvas.before:
        Rectangle:
            size: self.size
            source: "images/dice.jpg"

    FloatLayout:
        size: root.width, root.height

        Button:
            text: "Option"
	    on_press: root.btn()
            pos_hint: {"top": 1, "right": 1}
            size_hint: (None, None)
            size: 200, 100

	Button:
	    text: "Generate"
	    post_hint: {"x": 0.15, "y": 0.1}
	    size_hint: (None, None)
	    size: 200, 100
   
